{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "freeswitch-recordings",
      "host": {}
    }
  ],
  "containerDefinitions": [
    {
      "name": "freeswitch",
      "image": "dwilkie/freeswitch-rayo",
      "essential": true,
      "memory": 750,
      "portMappings": [
        {
          "hostPort": 5222,
          "containerPort": 5222,
          "protocol": "tcp"
        },
        {
          "hostPort": 5060,
          "containerPort": 5060,
          "protocol": "udp"
        }
      ],
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-group": "awslogs-freeswitch",
              "awslogs-region": "ap-southeast-1",
              "awslogs-stream-prefix": "awslogs-freeswitch"
          }
      },
      "mountPoints": [
        {
          "sourceVolume": "freeswitch-recordings",
          "containerPath": "/freeswitch-recordings"
        }
      ],
      "environment": [
        {
          "name": "SECRETS_BUCKET_NAME",
          "value": "somlengsecrets"
        },
        {
          "name": "FREESWITCH_CONF_DIR",
          "value": "freeswitch/conf"
        }
      ]
    },
    {
      "name": "docker-s3-sync",
      "image": "dwilkie/docker-s3-backup",
      "memory": 200,
      "essential": false,
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-group": "awslogs-docker-s3-sync",
              "awslogs-region": "ap-southeast-1",
              "awslogs-stream-prefix": "awslogs-docker-s3-sync"
          }
      },
      "mountPoints": [
        {
          "sourceVolume": "freeswitch-recordings",
          "containerPath": "/freeswitch-recordings"
        }
      ],
      "environment": [
        {
          "name": "S3_PATH",
          "value": "s3://somleng-recordings/recordings"
        },
        {
          "name": "LOCAL_DIR",
          "value": "/freeswitch-recordings"
        }
      ]
    }
  ]
}
